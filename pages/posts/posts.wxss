/* pages/posts/posts.wxss */

swiper {
  width: 100%;
  height: 460rpx;
}

swiper image {
  width: 100%;
  height: 460rpx;
}

.post-container {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-top: 1px solid #ededed;
  border-bottom: 1px solid #ededed;
}

.post-author-date {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
  margin-left: 10rpx;
}

.post-author-avatar {
  width: 60rpx;
  height: 60rpx;
}

.post-date {
  font-size: 26rpx;
  margin-left: 20rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  color: #333;
}

.post-image {
  width: 100%;
  height: 340rpx;
  margin-bottom: 30rpx;
}

.post-content {
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  line-height: 40rpx;
  letter-spacing: 2rpx;
}

.post-like {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}

.post-like-image,
.post-watch-image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 16rpx;
}

.post-like-font,
.post-watch-font {
  margin-right: 40rpx;
  font-size: 26rpx;
}